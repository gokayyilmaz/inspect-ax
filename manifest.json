{
  "manifest_version": 3,
  "name": "Inspect AX",
  "description": "Right-click an element and inspect AX properties faster.",
  "version": "0.1.2",
  "permissions": [
    "contextMenus",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/inspect-ax-16.png",
    "32": "icons/inspect-ax-32.png",
    "48": "icons/inspect-ax-48.png",
    "128": "icons/inspect-ax-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content-script.js"
      ],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "Inspect AX",
    "default_icon": {
      "16": "icons/inspect-ax-16.png",
      "32": "icons/inspect-ax-32.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/accessibility_new_24dp_1F1F1F_FILL0_wght400_GRAD0_opsz24.svg",
        "icons/accessibility_new_24dp_1F1F1F_FILL0_wght400_GRAD0_opsz24.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
